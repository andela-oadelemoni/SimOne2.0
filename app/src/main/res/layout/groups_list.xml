<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/groupInfoTextView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@drawable/group_badge"
            android:gravity="center"
            android:lineSpacingExtra="-3dp"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/groupNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Dele Momodu"
                android:paddingRight="15dp"
                android:textColor="@color/defaultTextColour"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/groupMembersTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/groupNameTextView"
                android:layout_alignRight="@id/groupNameTextView"
                android:textColor="@color/colorPrimary"
                android:text="12"
                android:textSize="12sp" />

        </RelativeLayout>


        <ImageView
            android:id="@+id/editIconImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/call_action"
            android:padding="10dp"
            android:src="@drawable/ic_edit_grey" />

        <ImageView
            android:id="@+id/deleteIconImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/call_action"
            android:padding="10dp"
            android:src="@drawable/ic_delete_grey" />

    </LinearLayout>
</layout>
